<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app" >

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="@dimen/startscreen_iv_welcome_width"
        android:layout_height="@dimen/startscreen_iv_welcome_height"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="7.0dip"
        android:background="@drawable/welcome"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_welcome"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_play"
            style="@style/style_menu_item_play"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/startscreen_tv_play_height"
            android:layout_marginLeft="@dimen/startscreen_tv_play_margin_left_right"
            android:layout_marginRight="@dimen/startscreen_tv_play_margin_left_right"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:drawableLeft="@drawable/ic_xb"
            android:gravity="center"
            android:paddingLeft="@dimen/startscreen_tv_play_padding_left_right"
            android:paddingRight="@dimen/startscreen_tv_play_padding_left_right"
            android:text="@string/tv_play1_title" />

        <TextView
            android:id="@+id/tv_play2"
            style="@style/style_menu_item_play"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/startscreen_tv_play_height"
            android:layout_marginLeft="@dimen/startscreen_tv_play_margin_left_right"
            android:layout_marginRight="@dimen/startscreen_tv_play_margin_left_right"
            android:layout_marginTop="@dimen/startscreen_tv_play_margin_top"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:drawableLeft="@drawable/ic_gif"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="@dimen/startscreen_tv_play_padding_left_right"
            android:paddingRight="@dimen/startscreen_tv_play_padding_left_right"
            android:text="@string/tv_play2_title" />

        <TextView
            android:id="@+id/tv_play3"
            style="@style/style_menu_item_play"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/startscreen_tv_play_height"
            android:layout_marginLeft="@dimen/startscreen_tv_play_margin_left_right"
            android:layout_marginRight="@dimen/startscreen_tv_play_margin_left_right"
            android:layout_marginTop="@dimen/startscreen_tv_play_margin_top"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:drawableLeft="@drawable/ic_jav"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="@dimen/startscreen_tv_play_padding_left_right"
            android:paddingRight="@dimen/startscreen_tv_play_padding_left_right"
            android:text="@string/tv_play3_title" />

        <TextView
            android:id="@+id/tv_play4"
            style="@style/style_menu_item_play"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/startscreen_tv_play_height"
            android:layout_marginLeft="@dimen/startscreen_tv_play_margin_left_right"
            android:layout_marginRight="@dimen/startscreen_tv_play_margin_left_right"
            android:layout_marginTop="@dimen/startscreen_tv_play_margin_top"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:drawableLeft="@drawable/ic_hidden_pic"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="@dimen/startscreen_tv_play_padding_left_right"
            android:paddingRight="@dimen/startscreen_tv_play_padding_left_right"
            android:text="@string/tv_play4_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivHcgd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_dhbc"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_info"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</RelativeLayout>