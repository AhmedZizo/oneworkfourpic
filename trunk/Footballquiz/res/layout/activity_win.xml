<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vic"
    android:orientation="vertical" >

    <TextView
        style="@style/style_more_app_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/winscreen_tv_congratulation_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/startscreen_tv_play_margin_left_right"
        android:layout_marginRight="@dimen/startscreen_tv_play_margin_left_right"
        android:layout_marginTop="30dp"
        android:background="@drawable/congratulation_frame"
        android:gravity="center"
        android:text="@string/chucmung"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/dapan" />

    <GridView
        android:id="@+id/gv_win"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center_horizontal"
        android:listSelector="@android:color/transparent"
        android:numColumns="7"
        android:verticalSpacing="5dp" >
    </GridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/thuong"
        android:textColor="#2E2EFE" />

    <TextView
        android:id="@+id/tv_continue"
        style="@style/style_tv_continues"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/winscreen_tv_continues_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/winscreen_tv_continues_margin_bottom"
        android:layout_marginTop="@dimen/winscreen_tv_continues_margin_top"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:text="@string/tv_continues_title" />

</LinearLayout>